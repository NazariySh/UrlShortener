@model RegisterViewModel

<div class="row justify-content-center">
    <div class="card shadow col-lg-6 col-md-8 border-0 p-5">
        @if (User.IsAdmin())
        {
            <h2 class="page-title text-center">Register - ADMIN PORTAL</h2>
        }
        else
        {
            <h2 class="page-title text-center">Register</h2>
        }

        <div class="card-body">
            <form id="registerForm" class="row g-3" method="post">
                
                <partial name="_ErrorAlert"/>

                <div class="form-group col-12">
                    <input asp-for="Email" class="form-control" placeholder="Email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <input asp-for="Password" class="form-control" placeholder="Password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                @if (User.IsAdmin())
                {
                    <div class="form-group col-12">
                        <select asp-for="Role" asp-items="@Html.GetEnumSelectList<RoleType>()" class="form-select">
                            <option disabled selected>-Select Role-</option>
                        </select>
                    </div>
                }

                <button type="submit" class="w-100 btn btn-lg btn-primary">
                    Register <i class="bi bi-arrow-right"></i>
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}