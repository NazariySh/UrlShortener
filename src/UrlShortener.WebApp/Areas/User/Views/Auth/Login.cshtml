@model LoginViewModel

<div class="row justify-content-center">
    <div class="card shadow border-0 p-5 col-lg-6 col-md-8">
        <h2 class="page-title text-center">Login</h2>
        <div class="card-body">
            <form id="registerForm" class="row gap-3" method="post">
                <partial name="_ErrorAlert"/>

                <input type="hidden" asp-for="ReturnUrl"/>

                <div class="form-group col-12">
                    <input asp-for="Email" class="form-control" placeholder="Email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <input asp-for="Password" class="form-control" placeholder="Password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label asp-for="RememberMe" class="form-label">
                        <input class="form-check-input px-2" asp-for="RememberMe" aria-checked="False"/>
                        Keep me logged in - applies to all log in options below.
                    </label>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">
                    Email login
                    <i class="bi bi-arrow-right"></i>
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
